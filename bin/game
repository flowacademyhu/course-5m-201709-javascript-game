#!/usr/bin/env nodejs
'use strict';
const gameArea = require('../data/game-area/game-field/index');
const read = require('readline-sync');

let gameIsRunning = true;
// x es y koordinata
let position = [0, 9];

function matrixEdgeCheck (x, y, matrix) {
  if (typeof matrix[x] === 'object' && typeof matrix[y] === 'object') {
    return true;
  } else {
    return false;
  }
}

function map () {
  let matrix = [];
  let n = 0;

  for (let i = 0; i < 10; i++) {
    matrix[i] = [];
    for (let j = 0; j < 10; j++) {
      matrix[i][j] = n;
      n++;
    }
  }
  console.log(matrix);
  return matrix;
}

function go (direction) {
  let currentPosition = [position[0], position[1]];

  switch (direction) {
    case 'kelet':
      currentPosition[0] += 1;
      break;
    case 'nyugat':
      currentPosition[0] -= 1;
      break;
    case 'észak':
      currentPosition[1] -= 1;
      break;
    case 'dél':
      currentPosition[1] += 1;
      break;
    default:
      console.log('Merre?');
  }

  if (typeof matrix[currentPosition[0]] === 'object' &&
        typeof matrix[currentPosition[1]] === 'object') {
    position[0] = currentPosition[0];
    position[1] = currentPosition[1];
  }

  console.log(gameArea[matrix[position[1]][position[0]]].desc);

  if (matrixEdgeCheck(position[0], position[1] - 1, matrix)) {
    console.log('Tőled északra ' + gameArea[matrix[position[1] - 1][position[0]]].shortDesc);
  } else {
    console.log('Tőled északra piciny világod szélét látod, a leesés fenyeget! JUJJUJ');
  }

  if (matrixEdgeCheck(position[0], position[1] + 1, matrix)) {
    console.log('Tőled délre ' + gameArea[matrix[position[1] + 1][position[0]]].shortDesc);
  } else {
    console.log('Tőled délre piciny világod szélét látod, a leesés fenyeget! JUJJUJ');
  }

  if (matrixEdgeCheck(position[0] - 1, position[1], matrix)) {
    console.log('Tőled keletre ' + gameArea[matrix[position[1]][position[0] - 1]].shortDesc);
  } else {
    console.log('Tőled keletre piciny világod szélét látod, a leesés fenyeget! JUJJUJ');
  }

  if (matrixEdgeCheck(position[0] + 1, position[1], matrix)) {
    console.log('Tőled nyugatra ' + gameArea[matrix[position[1]][position[0] + 1]].shortDesc);
  } else {
    console.log('Tőled nyugatra piciny világod szélét látod, a leesés fenyeget! JUJJUJ');
  }
}

// init map
let matrix = map();

while (gameIsRunning) {
  const input = read.question('>>');
  const splittedText = input.split(' ');

  switch (splittedText[0]) {
    case 'kilépés':
      gameIsRunning = false;
      break;
    case 'menj':
      go(splittedText[1]);
      break;
    default:
      console.log('Tanulj meg magyarul!');
  }
}
