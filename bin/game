#!/usr/bin/env nodejs
'use strict';

const readlineSync = require('readline-sync');
const command = require('../lib/command')
let inputText;

while (true) {
    inputText = readlineSync.question('>> ');
    if (quit(inputText)) break;
    command(inputText);
}

function quit(inputText) {
    return inputText == 'kilépés'
}