#!/usr/bin/env nodejs
'use strict';

const read = require('readline-sync');
const position = require('../data/game-area/starter-position');
const map = require('../data/game-area/index');
const gameWin = require('../lib/game-win');
const command = require('../lib/command');
const context = require('../data/context');

/* let gameIsRunning = true; */

// init map
let matrix = map();
while (context.gameState.gameIsRunning && context.gameState.quit) {
  const input = read.question('>>');
  const splittedText = input.split(' ');
  console.log('--------------------------------------');
  command(splittedText, matrix);
  context.gameState.gameIsRunning = gameWin(position);
}
